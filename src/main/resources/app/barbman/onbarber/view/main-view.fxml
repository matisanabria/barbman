<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.barbman.onbarber.controller.MainViewController">
  <children>
    <BorderPane fx:id="borderPane" prefHeight="632.0" prefWidth="1016.0" AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="4.0">
      <top>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
          <children>
            <!-- AgrupaciÃ³n de botones con ToggleGroup -->
            <ToggleButton fx:id="btnInicio" selected="true">
              <graphic>
                <FontIcon iconLiteral="fas-home" iconSize="24"/>
              </graphic>
              <text>Inicio</text>
              <toggleGroup>
                <ToggleGroup fx:id="menuGroup"/>
              </toggleGroup>
              <contentDisplay>TOP</contentDisplay>
            </ToggleButton>
            <ToggleButton fx:id="btnServicios" toggleGroup="$menuGroup">
              <graphic>
                <FontIcon iconLiteral="fas-cut" iconSize="24"/>
              </graphic>
              <text>Servicios</text>
              <contentDisplay>TOP</contentDisplay>
            </ToggleButton>
            <ToggleButton fx:id="btnEgresos" toggleGroup="$menuGroup">
              <graphic>
                <FontIcon iconLiteral="fas-arrow-down" iconSize="24"/>
              </graphic>
              <text>Egresos</text>
              <contentDisplay>TOP</contentDisplay>
            </ToggleButton>
            <ToggleButton fx:id="btnBalance" toggleGroup="$menuGroup">
              <graphic>
                <FontIcon iconLiteral="fas-chart-line" iconSize="24"/>
              </graphic>
              <text>Balance</text>
              <contentDisplay>TOP</contentDisplay>
            </ToggleButton>
            <ToggleButton fx:id="btnAjustes" toggleGroup="$menuGroup">
              <graphic>
                <FontIcon iconLiteral="fas-cog" iconSize="24" disable="true"/>
              </graphic>
              <text>Ajustes</text>
              <contentDisplay>TOP</contentDisplay>
            </ToggleButton>
          </children>
        </HBox>
      </top>
    </BorderPane>
  </children>
</AnchorPane>
