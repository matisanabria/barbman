<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="app.barbman.onbarber.controller.ServiciosViewController"
        spacing="16"
        alignment="CENTER"
        fillWidth="true"
        prefWidth="600.0"
        style="-fx-padding: 24;">
    <children>
        <HBox alignment="CENTER" spacing="16" fillHeight="true">
            <children>
                <ChoiceBox fx:id="barberoField"/>
                <TextField fx:id="tipoServicioField" promptText="Tipo de servicio" prefWidth="120.0"/>
                <TextField fx:id="precioField" promptText="Precio" prefWidth="80.0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="16" fillHeight="true">
            <children>
                <ChoiceBox prefWidth="150.0" fx:id="formaPagoBox"/>
                <TextField fx:id="observacionesField" promptText="Observaciones" prefWidth="210.0"/>
                <Button mnemonicParsing="false" text="Guardar" prefWidth="90.0" fx:id="guardarButton"/>
            </children>
        </HBox>
    </children>

    <TableView fx:id="serviciosTable"
               prefHeight="288.0"
               prefWidth="560.0"
               style="-fx-font-size: 16px;">
        <columns>
            <TableColumn fx:id="colBarbero" prefWidth="100" text="Barbero"/>
            <TableColumn fx:id="colTipoServicio" prefWidth="120" text="Servicio"/>
            <TableColumn fx:id="colPrecio" prefWidth="80" text="Precio"/>
            <TableColumn fx:id="colFecha" prefWidth="110" text="Fecha"/>
            <TableColumn fx:id="colObservaciones" text="Observaciones"/>
        </columns>
    </TableView>

</VBox>