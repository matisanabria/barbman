<VBox
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="app.barbman.onbarber.controller.EgresosViewController"
        spacing="16"
        alignment="CENTER"
        fillWidth="true"
        prefWidth="600.0"
        style="-fx-padding: 24;">
    <children>
        <Label text="Registrar egreso" styleClass="services-title"/>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <TextField fx:id="montoField" promptText="Monto" prefWidth="100.0" styleClass="services-textfield"/>
                <ChoiceBox fx:id="tipoEgresoBox" prefWidth="130.0" styleClass="services-choicebox"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <TextField fx:id="descripcionField" promptText="DescripciÃ³n" prefWidth="220.0" styleClass="services-textfield"/>
