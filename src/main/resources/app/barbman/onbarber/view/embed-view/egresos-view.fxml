<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="app.barbman.onbarber.controller.EgresosViewController"
        spacing="16"
        alignment="CENTER"
        fillWidth="true"
        prefWidth="600.0"
        style="-fx-padding: 24;">
    <children>
        <Label text="Registrar egreso" styleClass="services-title"/>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="tipoEgresoBox" prefWidth="170.0" styleClass="services-choicebox"/>
                <TextField fx:id="montoField" promptText="Monto" prefWidth="120.0" styleClass="services-textfield"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <TextField fx:id="descripcionField" promptText="Descripción" prefWidth="220.0" styleClass="services-textfield"/>
                <Button mnemonicParsing="false" text="Guardar" prefWidth="150.0" fx:id="guardarButton" styleClass="services-button"/>
            </children>
        </HBox>
        <TableView fx:id="egresosTable"
                   prefHeight="300.0"
                   prefWidth="580.0"
                   styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colFecha" prefWidth="110" text="Fecha"/>
                <TableColumn fx:id="colTipo" prefWidth="80" text="Tipo"/>
                <TableColumn fx:id="colMonto" prefWidth="120" text="Monto"/>
                <TableColumn fx:id="colDescripcion" text="Descripción"/>
            </columns>
        </TableView>
    </children>
</VBox>