            </children>
        </HBox>
        <TableView fx:id="serviciosTable"
                   prefHeight="300.0"
                   prefWidth="580.0"
                   styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colBarbero" prefWidth="100" text="Barbero"/>
                <TableColumn fx:id="colMonto" prefWidth="120" text="Monto"/>
                <TableColumn fx:id="colTipo" prefWidth="80" text="Tipo"/>
                <TableColumn fx:id="colFecha" prefWidth="110" text="Fecha"/>
