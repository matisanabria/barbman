<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="640.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.barbman.core.controller.MainController">
    <children>
        <BorderPane fx:id="borderPane"
                    prefHeight="632.0"
                    prefWidth="1016.0"
                    AnchorPane.bottomAnchor="4.0"
                    AnchorPane.leftAnchor="4.0"
                    AnchorPane.rightAnchor="4.0"
                    AnchorPane.topAnchor="4.0"
                    styleClass="main-borderpane">
            <top>
                <HBox alignment="CENTER"
                      spacing="20.0"
                      BorderPane.alignment="CENTER"
                      styleClass="main-menu-bar">
                    <children>
                        <!-- AgrupaciÃ³n de botones con ToggleGroup -->
                        <ToggleButton fx:id="btnInicio" selected="true" styleClass="main-menu-btn" disable="true">
                            <graphic>
                                <FontIcon iconLiteral="fas-home" iconSize="24"/>
                            </graphic>
                            <text>Inicio</text>
                            <toggleGroup>
                                <ToggleGroup fx:id="menuGroup"/>
                            </toggleGroup>
                            <contentDisplay>TOP</contentDisplay>
                        </ToggleButton>
                        <ToggleButton fx:id="btnServicios" toggleGroup="$menuGroup" styleClass="main-menu-btn">
                            <graphic>
                                <FontIcon iconLiteral="fas-cut" iconSize="24"/>
                            </graphic>
                            <text>Servicios</text>
                            <contentDisplay>TOP</contentDisplay>
                        </ToggleButton>
                        <ToggleButton fx:id="btnEgresos" toggleGroup="$menuGroup" styleClass="main-menu-btn">
                            <graphic>
                                <FontIcon iconLiteral="fas-arrow-down" iconSize="24"/>
                            </graphic>
                            <text>Egresos</text>
                            <contentDisplay>TOP</contentDisplay>
                        </ToggleButton>
                        <ToggleButton fx:id="btnSueldos" toggleGroup="$menuGroup" styleClass="main-menu-btn">
                            <graphic>
                                <FontIcon iconLiteral="far-money-bill-alt" iconSize="24"/>
                            </graphic>
                            <text>Sueldos</text>
                            <contentDisplay>TOP</contentDisplay>
                        </ToggleButton>
                        <ToggleButton fx:id="btnAjustes" toggleGroup="$menuGroup" disable="true" styleClass="main-menu-btn">
                            <graphic>
                                <FontIcon iconLiteral="fas-cog" iconSize="24" />
                            </graphic>
                            <text>Ajustes</text>
                            <contentDisplay>TOP</contentDisplay>
                        </ToggleButton>
                    </children>
                </HBox>
            </top>
            <bottom>
                <HBox alignment="BOTTOM_RIGHT"
                      spacing="10"
                      BorderPane.alignment="CENTER"
                      styleClass="main-bottom-bar">
                    <children>
                        <Button fx:id="btnLock"
                                prefWidth="32"
                                prefHeight="32"
                                onAction="#onCerrarSesion"
                                styleClass="main-lock-btn">
                            <graphic>
                                <FontIcon iconLiteral="fas-lock" iconSize="18"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
