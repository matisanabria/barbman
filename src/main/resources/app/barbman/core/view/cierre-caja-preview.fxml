<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.barbman.core.controller.CierreCajaController"
      spacing="16"
      alignment="TOP_LEFT"
      prefWidth="450.0"
      style="-fx-padding: 24;">

    <children>

        <!-- Encabezado -->
        <Label text="Confirmar cierre de caja"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Panel tipo ticket -->
        <VBox spacing="6"
              alignment="TOP_LEFT"
              style="-fx-background-color: #f9f9f9;
                     -fx-padding: 16;
                     -fx-border-color: #ddd;
                     -fx-border-radius: 6;
                     -fx-background-radius: 6;"
              prefWidth="400.0">

            <!-- Encabezado -->
            <Label fx:id="lblFecha" text="Fecha: --/--/----" style="-fx-font-weight: bold;"/>

            <!-- Totales -->
            <Label fx:id="lblIngresos" text="Ingresos totales: 0 Gs"/>
            <Label fx:id="lblEgresos" text="Egresos totales: 0 Gs"/>
            <Label fx:id="lblSaldoFinal" text="Saldo final: 0 Gs" style="-fx-font-weight: bold;"/>

            <!-- Desglose -->
            <Separator/>
            <Label text="Desglose:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblEfectivo" text="- Efectivo: 0 Gs"/>
            <Label fx:id="lblTransferencia" text="- Transferencia: 0 Gs"/>
            <Label fx:id="lblPOS" text="- POS: 0 Gs"/>

        </VBox>

        <!-- Botonera -->
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnCancelar" text="Cancelar"/>
                <Button fx:id="btnGuardar" text="Guardar" styleClass="services-button"/>
            </children>
        </HBox>

    </children>
</VBox>
