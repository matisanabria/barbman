<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.barbman.core.controller.CajaController"
      spacing="16"
      alignment="TOP_LEFT"
      fillWidth="true"
      prefWidth="600.0"
      style="-fx-padding: 24;">

    <children>

        <!-- Encabezado -->
        <HBox alignment="CENTER_LEFT" spacing="16" styleClass="services-row">
            <children>
                <Label text="Caja diaria" styleClass="services-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ChoiceBox fx:id="choiceFechas" prefWidth="150.0"/>
                <Button fx:id="btnCierreCaja" text="Cierre de caja" styleClass="services-button"/>
            </children>
        </HBox>

        <!-- Panel de ticket -->
        <VBox spacing="6"
              alignment="TOP_LEFT"
              style="-fx-background-color: #f9f9f9; -fx-padding: 16; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;"
              prefWidth="550.0">

            <!-- Encabezado -->
            <Label fx:id="lblFecha" text="Fecha: --/--/----" style="-fx-font-weight: bold;"/>

            <!-- Totales -->
            <Label fx:id="lblIngresos" text="Ingresos totales: 0 Gs"/>
            <Label fx:id="lblEgresos" text="Egresos totales: 0 Gs"/>
            <Label fx:id="lblSaldoFinal" text="Saldo final: 0 Gs" style="-fx-font-weight: bold;"/>

            <!-- Desglose -->
            <Separator/>
            <Label text="Desglose:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblEfectivo" text="- Efectivo: 0 Gs"/>
            <Label fx:id="lblTransferencia" text="- Transferencia: 0 Gs"/>
            <Label fx:id="lblPOS" text="- POS: 0 Gs"/>

        </VBox>

    </children>
</VBox>
