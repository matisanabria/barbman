<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<VBox
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="app.barbman.core.controller.SueldosViewController"
        spacing="16"
        alignment="CENTER"
        fillWidth="true"
        prefWidth="600.0"
        style="-fx-padding: 24;">
    <children>

        <!-- Encabezado -->
        <HBox alignment="CENTER_LEFT" spacing="16" styleClass="services-row">
            <children>
                <Label text="Sueldos de la semana actual" styleClass="services-title"/>
                <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
                <Button text="+ Registrar Adelanto" fx:id="btnRegistrarAdelanto" styleClass="services-button"/>
            </children>
        </HBox>

        <!-- Tabla de sueldos -->
        <TableView fx:id="sueldosTable"
                   prefHeight="400.0"
                   prefWidth="750.0"
                   styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colBarbero" prefWidth="150.0" text="Barbero"/>
                <TableColumn fx:id="colProduccion" prefWidth="140.0" text="Producción"/>
                <TableColumn fx:id="colMonto" prefWidth="130.0" text="Monto a pagar"/>
                <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado"/>
                <TableColumn fx:id="colAccion" text="Acción"/>
            </columns>
        </TableView>

    </children>
</VBox>
