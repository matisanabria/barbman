<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="app.barbman.core.controller.ServiciosViewController"
        spacing="16"
        alignment="CENTER"
        fillWidth="true"
        prefWidth="600.0"
        style="-fx-padding: 24;">
    <children>
        <Label text="Registrar nuevo servicio" styleClass="services-title"/>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="barberoChoiceBox" prefWidth="130.0" styleClass="services-choicebox"/>
                <ChoiceBox fx:id="tipoServicioBox" prefWidth="250.0" styleClass="services-choicebox"/>
                <TextField fx:id="precioField" promptText="Precio" prefWidth="100.0" styleClass="services-textfield"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox prefWidth="130.0" fx:id="formaPagoBox" styleClass="services-choicebox"/>
                <TextField fx:id="observacionesField" promptText="Observaciones" prefWidth="220.0" styleClass="services-textfield"/>
                <Button mnemonicParsing="false" text="Guardar" prefWidth="150.0" fx:id="guardarButton" styleClass="services-button"/>
            </children>
        </HBox>
        <TableView fx:id="serviciosTable"
                   prefHeight="300.0"
                   prefWidth="580.0"
                   styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colBarbero" prefWidth="100" text="Barbero"/>
                <TableColumn fx:id="colTipoServicio" prefWidth="120" text="Servicio"/>
                <TableColumn fx:id="colPrecio" prefWidth="80" text="Precio"/>
                <TableColumn fx:id="colFecha" prefWidth="110" text="Fecha"/>
                <TableColumn fx:id="colObservaciones" text="Observaciones"/>
            </columns>
        </TableView>
    </children>
</VBox>