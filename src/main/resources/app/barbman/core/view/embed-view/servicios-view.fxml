<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" fillWidth="true" prefWidth="600.0" spacing="16" style="-fx-padding: 24;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.barbman.core.controller.ServiciosController">
    <children>
        <Label text="Registrar servicio" styleClass="services-title"/>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="barberoChoiceBox" prefWidth="130.0" styleClass="services-choicebox" />
                <ChoiceBox fx:id="tipoServicioBox" prefWidth="250.0" styleClass="services-choicebox" />
                <TextField fx:id="precioField" prefWidth="100.0" promptText="Precio" styleClass="services-textfield" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="formaPagoBox" prefWidth="130.0" styleClass="services-choicebox" />
                <TextField fx:id="observacionesField" prefWidth="220.0" promptText="Observaciones" styleClass="services-textfield" />
                <Button fx:id="guardarButton" mnemonicParsing="false" prefWidth="150.0" styleClass="services-button" text="Guardar" />
            </children>
        </HBox>
        <TableView fx:id="serviciosTable" prefHeight="300.0" prefWidth="580.0" styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colBarbero" prefWidth="100" text="Barbero" />
                <TableColumn fx:id="colTipoServicio" prefWidth="120" text="Servicio" />
                <TableColumn fx:id="colPrecio" prefWidth="80" text="Precio" />
                <TableColumn fx:id="colFormaPago" prefWidth="100" text="Pago" />
                <TableColumn fx:id="colFecha" prefWidth="110" text="Fecha" />
                <TableColumn fx:id="colObservaciones" text="Observaciones" />
            </columns>
        </TableView>
    </children>
</VBox>
