<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" fillWidth="true" prefWidth="600.0" spacing="16" style="-fx-padding: 24;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.barbman.core.controller.ServicesViewController">
    <children>
        <Label text="Registrar servicio" styleClass="services-title"/>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="userChoiceBox" prefWidth="130.0" styleClass="services-choicebox" />
                <ChoiceBox fx:id="serviceChoiceBox" prefWidth="250.0" styleClass="services-choicebox" />
                <TextField fx:id="priceField" prefWidth="100.0" promptText="Precio" styleClass="services-textfield" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="18" styleClass="services-row">
            <children>
                <ChoiceBox fx:id="paymentMethodBox" prefWidth="130.0" styleClass="services-choicebox" />
                <TextField fx:id="notesField" prefWidth="220.0" promptText="Observaciones" styleClass="services-textfield" />
                <Button fx:id="saveButton" mnemonicParsing="false" prefWidth="150.0" styleClass="services-button" text="Guardar" />
            </children>
        </HBox>
        <TableView fx:id="servicesTable" prefHeight="300.0" prefWidth="580.0" styleClass="main-table services-table">
            <columns>
                <TableColumn fx:id="colUser" prefWidth="100" text="Usuario" />
                <TableColumn fx:id="colServiceType" prefWidth="120" text="Servicio" />
                <TableColumn fx:id="colPrice" text="Precio" />
                <TableColumn fx:id="colPaymentMethod" prefWidth="100" text="Pago" />
                <TableColumn fx:id="colDate" prefWidth="110" text="Fecha" />
                <TableColumn fx:id="colNotes" text="Observaciones" />
            </columns>
        </TableView>
    </children>
</VBox>
